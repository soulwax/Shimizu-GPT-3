{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "$libs": ["src/libs"],
      "$libs/*": ["src/libs/*"]
    }
  },
  "include": ["src/**/*.d.ts", "src/**/*.js", "src/app.ts"],
  "exclude": ["node_modules", "**/node_modules", "dist"]
}
